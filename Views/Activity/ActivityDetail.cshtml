@model KMITL_WebDev_MiniProject.Entites.Activity

@{
    ViewData["Title"] = Model?.Name ?? "Activity Details";
}

<div class="activity-grid">
    <div class="card">
        <div class="card-header">
            <div class="detail">
                <h3>@Model?.Name</h3>
                <p>@Model?.Description</p>
                <div class="activity-info">
                    <p><strong>Event Date:</strong> @Model?.EventDate.ToString("MMMM dd, yyyy")</p>
                    <p><strong>Location:</strong> @Model?.Location</p>
                    <p><strong>Max Participants:</strong> @Model?.MaxPeople</p>
                    @if (!string.IsNullOrEmpty(Model?.MapUrl))
                    {
                        <p><strong>Map URL:</strong> <a href="@Model.MapUrl" target="_blank">View on Map</a></p>
                    }
                    <p><strong>Recruiting Mode:</strong> 
                        @if (Model?.RecruitingMode == 1)
                        {
                            <span>First Come, First Served</span>
                        }
                        else if (Model?.RecruitingMode == 2)
                        {
                            <span>Random on Event Day</span>
                        }
                        else if (Model?.RecruitingMode == 3)
                        {
                            <span>Owner Selection</span>
                        }
                    </p>
                    <p><strong>Show Participants:</strong> @(Model?.ShowParticipants == true ? "Yes" : "No")</p>
                </div>
            </div>
            <div class="card-image">
                @if (!string.IsNullOrEmpty(Model?.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model?.Name" style="width:100%; border-radius:10px; max-height: 300px; object-fit: cover;">
                }
                else
                {
                    <div style="background-color: #f0f0f0; height: 300px; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                        <span style="color: #999;">No Image</span>
                    </div>
                }
                <button class="join-btn">Join!</button>
            </div>
        </div>
        <div class="card-body">
            <div class="user-meta">Activity Owner</div>
            <p><strong>Created:</strong> @Model?.CreatedAt.ToString("MMM dd, yyyy")</p>
            <p><strong>Last Updated:</strong> @Model?.UpdatedAt.ToString("MMM dd, yyyy")</p>
        </div>
    </div>
</div>

<style>
    .activity-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, max(1000px, 1fr));
        gap: 200px;
    }

    .card {
        padding: 15px;
    }

    .detail {
        min-width: 100px;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    .activity-info {
        margin-top: 15px;
        line-height: 1.8;
    }

    .activity-info p {
        margin: 8px 0;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        width: 100%;
    }

    .card-image {
        max-width: 350px;
        flex-shrink: 0;
    }

    .join-btn {
        background: #FF7061;
        color: white;
        border: none;
        padding: 15px 50px;
        border-radius: 10px;
        cursor: pointer;
        margin-top: 15px;
        width: 100%;
        font-size: 16px;
        transition: background-color 0.2s;
    }

    .join-btn:hover {
        background: #e85d52;
    }
</style>
