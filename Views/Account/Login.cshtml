@{
    ViewData["Title"] = "Login Page";
	ViewData["Name"] = "Paramed";
	Layout = "~/Views/Shared/_Re_Log.cshtml";
}

@model KMITL_WebDev_MiniProject.Models.LoginViewModel
<link rel=stylesheet" href="~/css/Login.css" />	

<div class="Header-login">
	<h2>Login </h2>
	<p> Welcome ! </p>
</div>

<div asp-validation-summary="All"></div>
<form asp-action="Login" method="POST" class="Login">
	<div class="Email-box">
		<input asp-for="Email" placeholder=" " required/>
		<label asp-for="Email"></label>
		<span asp-validation-for="Email"></span>
	</div>
	<div class="Password-box">
		<input asp-for="Password" required/>
		<label asp-for="Password"></label>
		<span asp-validation-for="Password"></span>
	</div>
	<div class="Remember-box">
		<input asp-for="RememberMe"/>
		<label asp-for="RememberMe"></label>
		<span asp-validation-for="RememberMe"></span>
	</div>
	<button type="submit" >Login</button>
</form>

<a asp-controller="Account" asp-action="Register" class="Register" >Register</a>
