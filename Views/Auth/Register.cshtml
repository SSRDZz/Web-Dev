@model KMITL_WebDev_MiniProject.Models.RegisterViewModel
@{
	Layout = "~/Views/Shared/_Re_Log.cshtml";
}

<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />

<form asp-action="RegisterInsertProfile" method="POST">
	<div>
		<label asp-for="FirstName"></label>
		<input asp-for="FirstName" required/>
		<span asp-validation-for="FirstName"></span>
	</div>
	<div>
		<label asp-for="LastName"></label>
		<input asp-for="LastName" required/>
		<span asp-validation-for="LastName"></span>
	</div>
	<div>
		<label asp-for="UserName"></label>
		<input asp-for="UserName" required/>
		<span asp-validation-for="UserName"></span>
	</div>
	<div>
		<label asp-for="Email"></label>
		<input asp-for="Email" required/>
		<span asp-validation-for="Email"></span>
	</div>
	<div>
		<label asp-for="Password"></label>
		<input asp-for="Password" required/>
		<span asp-validation-for="Password"></span>
	</div>
	<div>
		<label asp-for="ConfirmPassword"></label>
		<input asp-for="ConfirmPassword" required/>
		<span asp-validation-for="ConfirmPassword"></span>
	</div>
	<div>
		<div>
			<label asp-for="Sex">Male</label>
			<input asp-for="Sex" required/ type="radio" value=0>
			<span asp-validation-for="Sex"></span>
		</div>
		<div>
			<label asp-for="Sex">Female</label>
			<input asp-for="Sex" required/ type="radio" value=1>
			<span asp-validation-for="Sex"></span>
		</div>
		<div>
			<label asp-for="Sex">Other</label>
			<input asp-for="Sex" required/ type="radio" value=2>
			<span asp-validation-for="Sex"></span>
		</div>
	</div>
	<div>
		<label asp-for="PhoneNumber"></label>
		<input asp-for="PhoneNumber" required/>
		<span asp-validation-for="PhoneNumber"></span>
	</div>
	<div>
		<label asp-for="DateOfBirth"></label>
		<input asp-for="DateOfBirth" type="date" required/>
		<span asp-validation-for="DateOfBirth"></span>
	</div>
	<input type="hidden" asp-for="ImageURL"/>
	<button type="submit">Done</button>
</form>


<script>
	// check login fail or pass using ViewBag
	window.registerFailed = @((ViewBag.register != null && ViewBag.register.ToString() == "0") ? "true" : "false");
</script>
<script src="~/js/Register.js" asp-append-version="true"></script>